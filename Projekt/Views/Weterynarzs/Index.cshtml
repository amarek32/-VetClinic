@model IEnumerable<Projekt.Models.Weterynarz>

@{
    ViewBag.Title = "Weterynarze";
}

<h2 class="text-center mt-4 mb-4 text-primary fw-bold">Lista weterynarzy</h2>

<div class="text-end mb-3">
    @Html.ActionLink("Dodaj nowego weterynarza", "Create", null, new { @class = "btn btn-success" })
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-primary text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Imie)</th>
            <th>@Html.DisplayNameFor(model => model.Nazwisko)</th>
            <th>@Html.DisplayNameFor(model => model.Specjalizacja)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center align-middle">
                <td>@item.Imie</td>
                <td>@item.Nazwisko</td>
                <td>@item.Specjalizacja</td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

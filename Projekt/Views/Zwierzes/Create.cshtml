@model Projekt.Models.Zwierze

@{
    ViewBag.Title = "Dodaj zwierzę";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">🐾 Dodaj zwierzę</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.Imie, new { @class = "form-label" })
                    @Html.EditorFor(model => model.Imie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Imie, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Gatunek, new { @class = "form-label" })
                    @Html.EditorFor(model => model.Gatunek, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gatunek, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Rasa, new { @class = "form-label" })
                    @Html.EditorFor(model => model.Rasa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rasa, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.DataUrodzenia, "Data urodzenia", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.DataUrodzenia, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.DataUrodzenia, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.Label("Właściciel", new { @class = "form-label" })
                    @Html.DropDownList("KlientId", null, "-- Wybierz właściciela --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KlientId, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">💾 Zapisz</button>
                    @Html.ActionLink("❌ Anuluj", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<Projekt.Models.Zwierze>

@{
    ViewBag.Title = "Zwierzęta";
}

<h2 class="text-center text-primary mt-4 mb-4">Lista zwierząt</h2>

<p>
    @Html.ActionLink("Dodaj nowe zwierzę", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Właściciel</th>
            <th>Imię</th>
            <th>Gatunek</th>
            <th>Rasa</th>
            <th>Data urodzenia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Klient.Imie @item.Klient.Nazwisko</td>
                <td>@item.Imie</td>
                <td>@item.Gatunek</td>
                <td>@item.Rasa</td>
                <td>@item.DataUrodzenia.ToString("dd.MM.yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">✏️ Edytuj</a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">🔍 Szczegóły</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">🗑️ Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Projekt.Models.Zwierze>

@{
    ViewBag.Title = "Zwierzęta";
}

<h2>Lista zwierząt</h2>

<p>
    @Html.ActionLink("Dodaj nowe zwierzę", "Create")
</p>

<table class="table">
    <tr>
        <th>Właściciel</th>
        <th>Imię zwierzęcia</th>
        <th>@Html.DisplayNameFor(model => model.Gatunek)</th>
        <th>@Html.DisplayNameFor(model => model.Rasa)</th>
        <th>@Html.DisplayNameFor(model => model.DataUrodzenia)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Klient.Imie @item.Klient.Nazwisko</td>
            <td>@item.Imie</td>
            <td>@item.Gatunek</td>
            <td>@item.Rasa</td>
            <td>@item.DataUrodzenia.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

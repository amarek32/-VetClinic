@model Projekt.Models.Leczenie

@{
    ViewBag.Title = "Usuń leczenie";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">❌ Potwierdzenie usunięcia leczenia</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Czy na pewno chcesz usunąć ten wpis leczenia?</p>

            <dl class="row">
                <dt class="col-sm-3">Opis wizyty</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Wizyta.Opis)</dd>

                <dt class="col-sm-3">Opis leczenia</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Opis)</dd>

                <dt class="col-sm-3">Lek</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Lek)</dd>

                <dt class="col-sm-3">Koszt</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Koszt)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-end mt-4">
                    <input type="submit" value="🗑️ Usuń" class="btn btn-danger me-2" />
                    @Html.ActionLink("↩️ Anuluj", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

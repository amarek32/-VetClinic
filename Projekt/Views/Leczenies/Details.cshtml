@model Projekt.Models.Leczenie

@{
    ViewBag.Title = "Szczegóły leczenia";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Szczegóły leczenia</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Opis wizyty</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Wizyta.Opis)</dd>

                <dt class="col-sm-3">Opis leczenia</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Opis)</dd>

                <dt class="col-sm-3">Lek</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Lek)</dd>

                <dt class="col-sm-3">Koszt</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Koszt)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            @Html.ActionLink("✏️ Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("⬅️ Powrót do listy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

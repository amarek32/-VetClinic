@model Projekt.Models.Leczenie

@{
    ViewBag.Title = "Dodaj leczenie";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">➕ Dodaj leczenie</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.Opis, "Opis", new { @class = "form-label" })
                    @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Lek, "Lek", new { @class = "form-label" })
                    @Html.EditorFor(model => model.Lek, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lek, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Koszt, "Koszt", new { @class = "form-label" })
                    @Html.EditorFor(model => model.Koszt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Koszt, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.Label("Wizyta", new { @class = "form-label" })
                    @Html.DropDownList("WizytaId", null, "-- Wybierz wizytę --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WizytaId, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">💾 Zapisz</button>
                    @Html.ActionLink("❌ Anuluj", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

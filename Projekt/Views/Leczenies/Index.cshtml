@model IEnumerable<Projekt.Models.Leczenie>

@{
    ViewBag.Title = "Leczenia";
}

<h2 class="text-center mt-4 mb-4 text-primary fw-bold">Lista leczeń</h2>

<div class="text-end mb-3">
    @Html.ActionLink("Dodaj leczenie", "Create", null, new { @class = "btn btn-success" })
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-info text-center">
        <tr>
            <th>Opis wizyty</th>
            <th>Opis leczenia</th>
            <th>Lek</th>
            <th>Koszt</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center align-middle">
                <td>@item.Wizyta.Opis</td>
                <td>@item.Opis</td>
                <td>@item.Lek</td>
                <td>@String.Format("{0:C}", item.Koszt)</td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

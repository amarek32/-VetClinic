@model Projekt.Models.Wizyta

@{
    ViewBag.Title = "Edycja wizyty";
}

<h2 class="text-center text-primary mb-4">Edytuj wizytę</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card shadow-sm p-4 bg-light">
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Data, "Data wizyty")
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Opis, "Opis wizyty")
                @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Zwierzę")
                @Html.DropDownList("ZwierzeId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ZwierzeId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Weterynarz")
                @Html.DropDownList("WeterynarzId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WeterynarzId, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">Zapisz zmiany</button>
            @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model Projekt.Models.Wizyta

@{
    ViewBag.Title = "Usuń wizytę";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">❌ Potwierdzenie usunięcia wizyty</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Czy na pewno chcesz usunąć tę wizytę?</p>

            <dl class="row">
                <dt class="col-sm-3">Weterynarz</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Weterynarz.Imie)</dd>

                <dt class="col-sm-3">Zwierzę</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Zwierze.Imie)</dd>

                <dt class="col-sm-3">Data</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Data)</dd>

                <dt class="col-sm-3">Opis</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Opis)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-end mt-4">
                    <input type="submit" value="🗑️ Usuń" class="btn btn-danger me-2" />
                    @Html.ActionLink("↩️ Anuluj", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

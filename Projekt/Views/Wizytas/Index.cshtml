@model IEnumerable<Projekt.Models.Wizyta>

@{
    ViewBag.Title = "Lista wizyt";
}

<h2 class="text-center mt-4 mb-4 text-primary fw-bold">Lista wizyt</h2>

<div class="text-end mb-3">
    @Html.ActionLink("Dodaj wizytę", "Create", null, new { @class = "btn btn-success" })
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-info text-center">
        <tr>
            <th>Weterynarz</th>
            <th>Zwierzę</th>
            <th>Data</th>
            <th>Opis</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center align-middle">
                <td>@item.Weterynarz.Imie @item.Weterynarz.Nazwisko</td>
                <td>@item.Zwierze.Imie</td>
                <td>@item.Data.ToString("dd.MM.yyyy")</td>
                <td>@item.Opis</td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Projekt.Models.Wizyta>

@{
    ViewBag.Title = "Lista wizyt";
}

<h2>Lista wizyt</h2>

<p>
    @Html.ActionLink("Dodaj wizytę", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Weterynarz)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zwierze.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Weterynarz.Imie @item.Weterynarz.Nazwisko</td>
            <td>@item.Zwierze.Imie</td>
            <td>@item.Data.ToString("dd.MM.yyyy")</td>
            <td>@item.Opis</td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

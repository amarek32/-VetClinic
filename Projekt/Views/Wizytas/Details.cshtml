@model Projekt.Models.Wizyta

@{
    ViewBag.Title = "Szczegóły wizyty";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Szczegóły wizyty</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Weterynarz</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Weterynarz.Imie)</dd>

                <dt class="col-sm-3">Zwierzę</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Zwierze.Imie)</dd>

                <dt class="col-sm-3">Data</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Data)</dd>

                <dt class="col-sm-3">Opis</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Opis)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            @Html.ActionLink("✏️ Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("⬅️ Powrót do listy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

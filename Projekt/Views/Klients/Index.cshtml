@model IEnumerable<Projekt.Models.Klient>
@{
    ViewBag.Title = "Lista klientów";
}

<h2 class="section-title">👥 Lista klientów</h2>

<p>
    @Html.ActionLink("Dodaj klienta", "Create", null, new { @class = "btn btn-primary shadow-sm mb-3" })
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Imie</td>
                    <td>@item.Nazwisko</td>
                    <td>@item.Email</td>
                    <td>@item.Telefon</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">✏️ Edytuj</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">🔍 Szczegóły</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">🗑️ Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

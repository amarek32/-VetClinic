@model IEnumerable<Projekt.Models.Klient>

@{
    ViewBag.Title = "Klienci";
}

<h2>Lista klientów</h2>

<p>
    @Html.ActionLink("Dodaj klienta", "Create")
</p>

<p>
    @Html.ActionLink("Zwierzęta", "Index", "Zwierzesc") |
    @Html.ActionLink("Wizyty", "Index", "Wizytas") |
    @Html.ActionLink("Weterynarze", "Index", "Weterynarzs") |
    @Html.ActionLink("Leczenia", "Index", "Leczenies")
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Imie)</th>
            <th>@Html.DisplayNameFor(model => model.Nazwisko)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Telefon)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Imie)</td>
                <td>@Html.DisplayFor(modelItem => item.Nazwisko)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


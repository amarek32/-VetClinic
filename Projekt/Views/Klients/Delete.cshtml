@model Projekt.Models.Klient

@{
    ViewBag.Title = "Usuń klienta";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">❌ Potwierdzenie usunięcia klienta</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Czy na pewno chcesz usunąć tego klienta? Tej operacji nie można cofnąć.</p>

            <dl class="row">
                <dt class="col-sm-3">Imię</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Imie)</dd>

                <dt class="col-sm-3">Nazwisko</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nazwisko)</dd>

                <dt class="col-sm-3">Adres e-mail</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefon)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-end mt-4">
                    <input type="submit" value="🗑️ Usuń" class="btn btn-danger me-2" />
                    @Html.ActionLink("↩️ Anuluj", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
